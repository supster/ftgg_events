<% provide(:title, 'New Event')%>
<h1>Add Event</h1>
<div class="row">
	<%= render "shared/error", error: @event  %>
	<div class="span6 offset3">
		<%= simple_form_for(@event) do |f| %>
		<%= f.label :name, "Title" %>
		<%= f.text_field :name %>
		
		<%= f.label :description %>
		<%= f.text_field :description %>
		
		<%= f.label :location, "Location Name" %>
		<%= f.text_field :location %>

		<%= f.label :address %>
		<%= f.text_field :address %>

		<%= f.label :start_date_time %>
		<%= f.text_field :start_date_time %>

		<%= f.label :end_date_time %>
		<%= f.text_field :end_date_time %>
		
		<%= f.label :url, "url" %>
		<%= f.text_field :url %>

		<%= f.label :cost %>
		<%= f.text_field :cost %>
		
		<%= f.submit "Create Event", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>

<script type="text/javascript">
  $(function() { $('#event_start_date_time').datetimepicker(); });
</script>
