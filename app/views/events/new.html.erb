<% provide(:title, 'New Event')%>
<% content_for :head do %>
	<style type="text/css">
		select {
			width: 80px;
		}
		#event_time_zone{
			margin-left: 0; 
			width: 280px;
		}
	</style>
	<script type="text/javascript">
  $(function() { 
  	$('#event_start_date_time').datepicker({minDate: 0, dateformat: "mm-dd-yyyy"}); 
  	$('#event_end_date_time').datepicker({minDate: 0, dateformat: "mm-dd-yyyy"}); 
  });
	</script>
<% end %>
<div class="row">
	<div class="span8 offset2">
		<h2>Add Event</h2>
		<%= render "shared/error", error: @event  %>
		<%= form_for @event, html: {class: "form-horizontal"} do |f| %>
			<div class="control-group">
				<%= f.label :name, class: "control-label" %>
				<div class="controls"><%= f.text_field :name, class: "input-xlarge" %></div>
			</div>
			<div class="control-group">
				<%= f.label 	:description, 	class: "control-label" %>
				<div class="controls"><%= f.text_area :description, class: "input-xlarge", rows: 5 %></div>
			</div>
			<div class="control-group">
				<%= f.label :location, "Location Name",	class: "control-label"   %>
				<div class="controls"><%= f.text_field :location, class: "input-xlarge" %></div>
			</div>

			<div class="control-group">
				<%= f.label :address, 		class: "control-label"  %>
				<div class="controls"><%= f.text_field :address, class: "input-xlarge" %></div>
			</div>

			<div class="control-group">
				<%= f.label :start_date_time,  class: "control-label"  %>
				<div class="controls">
					<%= f.text_field :start_date_time, class: "input-small" %>
					<%= f.time_select :start_date_time, ignore_date: true, minute_step: 5, ampm: true, class: "input-small"  %>
				</div>
			</div>
			<div class="control-group">
				<%= f.label :end_date_time,  class: "control-label" %>
				<div class="controls">
					<%= f.text_field :end_date_time, class: "input-small" %>
					<%= f.time_select :end_date_time, ignore_date: true, minute_step: 5, ampm: true, class: "input-small"  %>
				</div>
			</div>
			<div class="control-group">
				<%= f.label :time_zone,  class: "control-label" %>
				<div class="controls"><%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: "Eastern Time (US & Canada)" %></div>
			</div>
			<div class="control-group">
				<%= f.label :url, "URL",  class: "control-label"  %>
				<div class="controls"><%= f.url_field :url, class: "input-xlarge" %></div>
			</div>
			<div class="control-group">
				<%= f.label :cost,	class: "control-label"  %>
				<div class="controls"><%= f.text_field :cost, value: 0, class: "input-xlarge" %></div>
			</div>	
			<div class="control-group">
				<%= f.label :benefits,	class: "control-label"  %>
				<div class="controls">
					<%= f.text_area :benefits, rows: 3, class: "input-xlarge" %><br/><br/>
					<%= f.submit "Create Event", class: "btn btn-primary" %>
				</div>
			</div>
		<% end %>
	</div>
</div>


