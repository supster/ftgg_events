<% provide(:title, 'Sign Up')%>
<% content_for :head do %>
	<script type="text/javascript" src="http://platform.linkedin.com/in.js">
	  api_key: 6pdlxngbkhb9
	  authorize: true
	</script>	  
<% end %>
<h2>Sign Up</h2>
<div class="row">
	<div class="span6">
		<%= render "shared/error", error: @user  %>
		<%= form_for @user, html: {class: "form-horizontal"} do |f| %>


		<div class="control-group">
			<%= f.label :email, class: "control-label"  %>
			<div class="controls"><%= f.text_field :email, class: "input-large", placeholder: "Email Address", autofocus: "autofocus"%></div>
		</div>
		
		<div class="control-group">
			<%= f.label :password, class: "control-label"  %>
			<div class="controls"><%= f.password_field :password, class: "input-large" %></div>
		</div>
		
		<div class="control-group">
			<%= f.label :password_confirmation, "Confirmation", class: "control-label" %>
			<div class="controls">
				<%= f.password_field :password_confirmation, class: "input-large" %><br/><br/>
				<%= f.submit "Sign Up", class: "btn" %>
				<%= link_to "Already have an account?", signin_path %>
			</div>
		</div>
		<% end %>
	</div>
	<div class="span6">
		<script type="in/Login" data-size="large">Hello, <?js= firstName ?> <?js= lastName ?>.</script>		
	</div>
</div>