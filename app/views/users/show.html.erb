<% provide(:title, @user.name)%>
<div class="row">
	<div class="span12">
		<h1>
			<%= @user.name %>
		</h1>
		<div class="row">
			<div class="span4">
				<% #image_tag @user.photo.url(:small), size: "120x120" %>
			</div>
			<div class="span4">
				Email: <%= @user.email %>
			</div>
		</div>
	</div>
</div>
